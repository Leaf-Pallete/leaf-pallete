{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"**/node_modules/**",
			"**/.next/**",
			"public/**",
			"**/.env",
			"**/.gitattributes",
			"**/.gitignore",
			"**/favicon.ico",
			"**/bun.lockb",
			"**/LICENSE.md",
			"**/README.md",
			"**/.github/workflows/**"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"ignore": ["**/*.css"],
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineEnding": "lf",
		"lineWidth": 80
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"semicolons": "always",
			"trailingCommas": "all"
		}
	},
	"json": {
		"formatter": {
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
